<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="335dp"
    android:background="@drawable/bg2"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="77dp"
        android:text="@string/lead"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/btnimport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="73dp"
        android:background="@drawable/btnimport" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="146dp"
        android:text="@string/remote"
        android:textSize="20sp" />

    <ToggleButton
        android:id="@+id/remote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="135dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="219dp"
        android:text="@string/system"
        android:textSize="20sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="289dp"
        android:text="@string/volume"
        android:textSize="20sp" />
    
    <SeekBar
        android:id="@+id/seek"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="187dp"
        android:layout_marginTop="296dp"
        android:progressDrawable="@drawable/seekbar_img"
        android:thumb="@drawable/thumb" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/checkchina" >

        <RadioButton
            android:id="@+id/checkjapan"
            android:layout_marginLeft="169dp"
            android:layout_marginTop="221dp"
            android:text="@string/japan"
            android:textSize="17sp"
            android:singleLine="true" />

        <RadioButton
            android:id="@+id/checkchina"
            android:layout_marginTop="221dp"
            android:text="@string/china"
            android:textSize="17sp"
            android:singleLine="true" />

        <RadioButton
            android:id="@+id/checkeurope"
            android:layout_marginTop="221dp"
            android:text="@string/europe"
            android:textSize="17sp"
            android:singleLine="true" />
    </RadioGroup>

</RelativeLayout>