<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- title layout -->

    <RelativeLayout
        android:id="@+id/radio_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bar" >

        <ImageButton
            android:id="@+id/btnhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/btnhome" />

        <ImageButton
            android:id="@+id/btnclose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/btnclose" />

        <TextView
            android:id="@+id/textradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnhome"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btnhome"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/solid_white"
            android:textSize="30sp" />
    </RelativeLayout>

    <!-- middle area -->

    <RelativeLayout
        android:id="@+id/radio_middle_layout"
        android:layout_width="match_parent"
        android:layout_height="338dp"
        android:layout_weight="1.15"
        android:background="@drawable/bg" >

        <Button
            android:id="@+id/channel0"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/btnchannel"
            android:maxLength="7"
            android:textColor="@color/solid_white" />

        <Button
            android:id="@+id/channel1"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/channel0"
            android:layout_below="@+id/channel0"
            android:layout_marginTop="6dp"
            android:background="@drawable/btnchannel"
            android:maxLength="7"
            android:textColor="@color/solid_white" />

        <Button
            android:id="@+id/channel2"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/channel1"
            android:layout_below="@+id/channel1"
            android:layout_marginTop="6dp"
            android:background="@drawable/btnchannel"
            android:maxLength="7"
            android:textColor="@color/solid_white" />

        <Button
            android:id="@+id/channel3"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/channel2"
            android:layout_below="@+id/channel2"
            android:layout_marginTop="6dp"
            android:background="@drawable/btnchannel"
            android:maxLength="7"
            android:textColor="@color/solid_white" />

        <Button
            android:id="@+id/channel4"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/channel3"
            android:layout_below="@+id/channel3"
            android:layout_marginTop="6dp"
            android:background="@drawable/btnchannel"
            android:maxLength="7"
            android:textColor="@color/solid_white" />

        <Button
            android:id="@+id/channel5"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/channel0"
            android:layout_marginLeft="640dp"
            android:background="@drawable/btnchannel"
            android:maxLength="7"
            android:textColor="@color/solid_white" />

        <Button
            android:id="@+id/channel6"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/channel1"
            android:layout_marginLeft="640dp"
            android:background="@drawable/btnchannel"
            android:maxLength="7"
            android:textColor="@color/solid_white" />

        <Button
            android:id="@+id/channel7"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/channel2"
            android:layout_marginLeft="640dp"
            android:background="@drawable/btnchannel"
            android:maxLength="7"
            android:textColor="@color/solid_white" />

        <Button
            android:id="@+id/channel8"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/channel3"
            android:layout_marginLeft="640dp"
            android:background="@drawable/btnchannel"
            android:maxLength="7"
            android:textColor="@color/solid_white" />

        <Button
            android:id="@+id/channel9"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/channel4"
            android:layout_marginLeft="640dp"
            android:background="@drawable/btnchannel"
            android:maxLength="7"
            android:textColor="@color/solid_white" />

        <Button
            android:id="@+id/btnstep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnfine"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/btnfine"
            android:background="@drawable/btnfine"
            android:text="@string/step"
            android:textColor="@color/solid_white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnauto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnstep"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/btnstep"
            android:background="@drawable/btnfine"
            android:text="@string/auto"
            android:textColor="@color/solid_white"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/btnforward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="494dp"
            android:layout_alignTop="@+id/channel6"
            android:background="@drawable/btnfineforward" />

        <TextView
            android:id="@+id/radiotype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnbackward"
            android:layout_alignLeft="@+id/btnbackward"
            android:layout_marginLeft="23dp"
            android:gravity="center"
            android:textColor="@color/solid_gold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/radiohz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btnforward"
            android:layout_alignRight="@id/btnforward"
            android:layout_marginRight="23dp"
            android:gravity="center"
            android:textColor="@color/solid_gold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/channeldetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/btnbackward"
            android:layout_alignRight="@id/btnforward"
            android:layout_below="@id/btnbackward"
            android:layout_marginTop="13dp"
            android:gravity="right"
            android:textColor="@color/solid_gold"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="122dp"
            android:layout_height="39dp"
            android:layout_alignBottom="@+id/btnbackward"
            android:layout_marginLeft="35dp"
            android:layout_alignTop="@+id/btnforward"
            android:layout_toRightOf="@id/btnbackward"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/number1"
                android:layout_width="26dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/number2"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/number1"
                android:layout_toRightOf="@id/number1" />

            <ImageView
                android:id="@+id/number3"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/number1"
                android:layout_toRightOf="@id/number2" />

            <ImageView
                android:id="@+id/number4"
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/number1"
                android:layout_toRightOf="@id/number3"
                android:src="@drawable/point"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/number5"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/number1"
                android:layout_toRightOf="@id/number4" />
        </LinearLayout>

        <Button
            android:id="@+id/btnfine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnbackward"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:background="@drawable/btnfine"
            android:text="@string/fine"
            android:textColor="@color/solid_white"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/btnbackward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/channel1"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/channel1"
            android:background="@drawable/btnfinebackward" />

    </RelativeLayout>
    <!-- bottom area -->

    <RelativeLayout
        android:id="@+id/radio_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_bar" >

        <Button
            android:id="@+id/btnfm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/btnbottom"
            android:gravity="center"
            android:text="@string/fm1"
            android:textColor="@color/solid_white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnfm2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/btnfm1"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/btnfm1"
            android:background="@drawable/btnbottom"
            android:gravity="center"
            android:text="@string/fm2"
            android:textColor="@color/solid_white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/btnfm2"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/btnfm2"
            android:background="@drawable/btnbottom"
            android:gravity="center"
            android:text="@string/am"
            android:textColor="@color/solid_white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnimport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/btnam"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/btnam"
            android:background="@drawable/btnimport"
            android:gravity="center" />

        <Button
            android:id="@+id/btnvolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/btnimport"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/btnimport"
            android:background="@drawable/sound_bottom_btn"
            android:gravity="center" />
    </RelativeLayout>

</LinearLayout>